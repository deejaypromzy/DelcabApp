<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="delcab.delcab.BusinessPasswordActivity">



    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/curPassLb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current password:"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />

    <EditText
        android:layout_marginTop="0dp"
        android:id="@+id/curPassBox"
        android:layout_below="@+id/curPassLb"
        android:hint="Current password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />


    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/newPassLb"
        android:layout_below="@+id/curPassBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New password:"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />

    <EditText
        android:layout_marginTop="0dp"
        android:id="@+id/newPassBox"
        android:layout_below="@+id/newPassLb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text=""
        android:hint="New password"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />

    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/repPassLb"
        android:layout_below="@+id/newPassBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat new password:"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />

    <EditText
        android:layout_marginTop="0dp"
        android:id="@+id/repPassBox"
        android:layout_below="@+id/repPassLb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Repeat new password"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />



    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="@drawable/green_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/repPassBox"
        android:text="Confirm changes"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:id="@+id/confBtn"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textColor="@android:color/white" />



</RelativeLayout>
