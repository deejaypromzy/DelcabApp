<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="delcab.delcab.ConfirmPackageActivity">


    <TextView
        android:id="@+id/colBox"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="30dp"
        android:text="Collection address"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/delBox"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:textColor="@color/black"
        android:layout_below="@+id/colBox"
        android:layout_marginTop="35dp"
        android:text="Delivery address"
        android:textAlignment="center"
        android:textSize="22sp" />




    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="@drawable/green_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/delBox"
        android:text="Confirm Details"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="35dp"
        android:id="@+id/conBtn"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textColor="@android:color/white" />




</RelativeLayout>
